generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ProcessKind {
  MANUAL
  SYSTEM
}

enum ProcessStatus {
  DRAFT
  ACTIVE
  DEPRECATED
}

enum ProcessImportance {
  LOW
  MEDIUM
  HIGH
}

enum DocumentType {
  URL
  FILE
}

model Area {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text

  processes   Process[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([name])
}

model Process {
  id          String            @id @default(cuid())
  areaId      String
  parentId    String?

  name        String
  description String?           @db.Text

  kind        ProcessKind       @default(MANUAL)
  status      ProcessStatus     @default(DRAFT)
  importance  ProcessImportance @default(MEDIUM)

  area        Area              @relation(fields: [areaId], references: [id], onDelete: Cascade)

  parent      Process?          @relation("ProcessTree", fields: [parentId], references: [id], onDelete: SetNull)
  children    Process[]         @relation("ProcessTree")

  tools       ProcessTool[]
  people      ProcessPerson[]
  documents   ProcessDocument[]
  versions    ProcessVersion[]
  approval    ProcessApproval?

  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([areaId])
  @@index([parentId])
  @@index([name])
}

model Tool {
  id        String        @id @default(cuid())
  name      String
  url       String?

  processes ProcessTool[]

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@unique([name])
}

model Person {
  id        String         @id @default(cuid())
  name      String
  email     String?

  processes ProcessPerson[]

  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@index([name])
  @@index([email])
}

model Document {
  id         String       @id @default(cuid())
  title      String

  url        String?

  type       DocumentType @default(URL)
  storageKey String?
  mimeType   String?
  sizeBytes  Int?

  processes  ProcessDocument[]

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@index([title])
  @@index([type])
}

model ProcessTool {
  processId String
  toolId    String

  process   Process @relation(fields: [processId], references: [id], onDelete: Cascade)
  tool      Tool    @relation(fields: [toolId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([processId, toolId])
  @@index([toolId])
}

model ProcessPerson {
  processId String
  personId  String

  process   Process @relation(fields: [processId], references: [id], onDelete: Cascade)
  person    Person  @relation(fields: [personId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([processId, personId])
  @@index([personId])
}

model ProcessDocument {
  processId  String
  documentId String

  process    Process  @relation(fields: [processId], references: [id], onDelete: Cascade)
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())

  @@id([processId, documentId])
  @@index([documentId])
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LINK
  UNLINK
}

model AuditLog {
  id         String      @id @default(cuid())
  action     AuditAction
  entityType String
  entityId   String
  actorId    String?
  payload    Json?

  createdAt  DateTime    @default(now())

  @@index([entityType, entityId])
  @@index([actorId])
  @@index([createdAt])
}

model ProcessVersion {
  id          String   @id @default(cuid())
  processId   String
  version     Int
  snapshot    Json
  createdAt   DateTime @default(now())
  createdBy   String?

  process     Process  @relation(fields: [processId], references: [id], onDelete: Cascade)

  @@unique([processId, version])
  @@index([processId])
}

enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         UserRole @default(VIEWER)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum ApprovalStatus {
  DRAFT
  IN_REVIEW
  APPROVED
  REJECTED
}

model ProcessApproval {
  id            String         @id @default(cuid())
  processId     String         @unique
  status        ApprovalStatus @default(DRAFT)
  requestedBy   String?
  reviewedBy    String?
  reviewedAt    DateTime?
  notes         String?        @db.Text

  process       Process        @relation(fields: [processId], references: [id], onDelete: Cascade)

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}
